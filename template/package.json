{
  "name": "voodoo-dashboard",
  "description": "A technical test for Voodoo",
  "version": "1.0.0",
  "author": "brice.guegan.info@gmail.com",
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run clean && npm run test && npm run sass && npm run build:parts && npm run clean:css && npm run process:html",
    "build:parts": "npm run sass && npm run compile",
    "clean": "rimraf dist && rimraf coverage",
    "clean:css": "cleancss -o dist/css/main.min.css src/css/bulma.css src/css/main.css",
    "compile": "webpack --config config/webpack.config.prod.js",
    "dev": "cross-env NODE_ENV=development npm run sass && concurrently --kill-others \"webpack-dev-server --hot --inline\" \"node-sass --watch --output ./src/css ./src/sass\"",
    "lint": "tslint src/**/*.ts",
    "process:html": "htmlprocessor src/index.html -o dist/index.html",
    "sass": "node-sass --output ./src/css ./src/sass",
    "serve": "http-server dist/ -o",
    "test": "node ./node_modules/qunitjs/bin/qunit"
  },
  "dependencies": {
    "axios": "~0.17.1",
    "bulma": "^0.6.2",
    "voo-i18n": "1.0.10",
    "vue": "~2.5",
    "vue-class-component": "~6.1.2",
    "vue-property-decorator": "~6.0.0",
    "vue-router": "~3.0.1",
    "vuex": "3.0.1"
  },
  "devDependencies": {
    "@types/node": "~7.0.8",
    "@types/sinon": "~1.16.36",
    "qunitjs": "~2.3.2",
    "vorlon": "~0.5.4",
    "awesome-typescript-loader": "~3.1.2",
    "clean-css-cli": "~4.0.9",
    "compression-webpack-plugin": "~0.3.2",
    "concurrently": "~3.4.0",
    "copy-webpack-plugin": "~4.0.1",
    "cross-env": "~3.2.4",
    "es6-promise": "~4.1.0",
    "file-loader": "~0.10.1",
    "globby": "~6.1.0",
    "htmlprocessor": "~0.2.4",
    "http-server": "~0.9.0",
    "istanbul-instrumenter-loader": "~2.0.0",
    "json-loader": "~0.5.4",
    "lodash.merge": "~4.6.0",
    "minimist": "~1.2.0",
    "ncp": "~2.0.0",
    "node-sass": "~4.5.0",
    "opn-cli": "~3.1.0",
    "raw-loader": "~0.5.1",
    "remap-istanbul": "~0.9.1",
    "rimraf": "~2.6.1",
    "tslint": "~4.5.1",
    "tslint-loader": "~3.4.3",
    "typescript": "~2.6.2",
    "ajv": "^5.5.2",
    "webpack": "~3.10.0",
    "webpack-dev-server": "~2.10.0"
  }
}
